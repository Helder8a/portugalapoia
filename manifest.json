{
  "name": "PortugalApoia",
  "short_name": "PortugalApoia",
  "description": "A sua plataforma comunitária para encontrar e publicar pedidos de artigos, doações e vagas de emprego em todo o país.",
  "lang": "pt-PT",
  "start_url": "/index.html",
  "id": "/index.html",
  "display": "standalone",
  "display_override": [
    "window-controls-overlay"
  ],
  "orientation": "any",
  "background_color": "#ffffff",
  "theme_color": "#0A3D62",
  "scope": "/",
  "categories": [
    "business",
    "lifestyle",
    "social"
  ],
  "handle_links": "auto",
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "edge_side_panel": {
    "preferred_width": 480
  },
  "share_target": {
    "action": "/publicar.html",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "file_handlers": [
    {
      "action": "/publicar.html",
      "accept": {
        "text/*": [".txt"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+portugalapoia",
      "url": "/index.html?protocol=%s"
    }
  ],
  "widgets": [
    {
      "name": "Vagas de Emprego Recentes",
      "description": "Veja as últimas vagas de emprego.",
      "tag": "empregos",
      "template": "empregos_widget",
      "ms_ac_template": "empregos_widget",
      "data": {
        "url": "/empregos.html"
      },
      "icons": [
        { "src": "images/favicon.ico.png", "sizes": "192x192" }
      ]
    }
  ],
  "shortcuts": [
    {
      "name": "Ver Vagas de Emprego",
      "url": "/empregos.html",
      "icons": [{ "src": "images/favicon.ico.png", "sizes": "192x192" }]
    },
    {
      "name": "Ver Doações",
      "url": "/doacoes.html",
      "icons": [{ "src": "images/favicon.ico.png", "sizes": "192x192" }]
    }
  ],
  "icons": [
    {
      "src": "images/favicon.ico.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "images/favicon.ico.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "screenshots": [
    {
      "src": "images/img_portada.webp",
      "type": "image/webp",
      "sizes": "1280x853",
      "form_factor": "wide"
    },
    {
      "src": "images/img_portada.webp",
      "type": "image/webp",
      "sizes": "1280x853",
      "form_factor": "narrow"
    }
  ]
}